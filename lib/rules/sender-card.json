{
  "cardName": "sender",
  "title": "معلومات المرسل",
  "enabled": true,
  "fields": {
    "senderName": {
      "type": "text",
      "label": "الاسم الكامل",
      "required": true,
      "validation": {
        "required": true,
        "minLength": 2,
        "pattern": "^[a-zA-Z\\s'-]+$",
        "errorMessage": "يجب أن يكون الاسم على الأقل حرفين بدون أحرف خاصة"
      },
      "placeholder": "أدخل الاسم الكامل للمرسل"
    },
    "senderPhone": {
      "type": "text",
      "label": "رقم الهاتف",
      "required": true,
      "validation": {
        "required": true,
        "minLength": 10,
        "errorMessage": "يجب أن يكون رقم الهاتف على الأقل 10 أرقام"
      },
      "placeholder": "مثال: 0501234567"
    },
    "senderCountry": {
      "type": "select",
      "label": "الدولة",
      "required": true,
      "validation": {
        "required": true,
        "errorMessage": "الرجاء اختيار الدولة"
      },
      "placeholder": "اختر الدولة"
    },
    "senderCity": {
      "type": "text",
      "label": "المدينة",
      "required": true,
      "validation": {
        "required": true,
        "minLength": 2,
        "errorMessage": "المدينة مطلوبة"
      },
      "placeholder": "أدخل المدينة"
    },
    "senderStreet": {
      "type": "text",
      "label": "عنوان الشارع",
      "required": false,
      "validation": {
        "required": false,
        "minLength": 5,
        "errorMessage": "عنوان الشارع مطلوب"
      },
      "placeholder": "أدخل عنوان الشارع"
    },
    "senderPostalCode": {
      "type": "text",
      "label": "الرمز البريدي",
      "required": true,
      "validation": {
        "required": true,
        "minLength": 3,
        "maxLength": 10,
        "errorMessage": "يجب أن يكون الرمز البريدي بين 3-10 أحرف"
      },
      "placeholder": "أدخل الرمز البريدي"
    }
  }
}
