{
  "cardName": "receiver",
  "title": "Receiver Information",
  "enabled": false,
  "fields": {
    "receiverName": {
      "type": "text",
      "label": "Full Name",
      "required": true,
      "validation": {
        "required": true,
        "minLength": 2,
        "pattern": "^[a-zA-Z\\s'-]+$",
        "errorMessage": "Name must be at least 2 characters with no special characters"
      },
      "placeholder": "Enter receiver's full name"
    },
    "receiverPhone": {
      "type": "text",
      "label": "Phone Number",
      "required": true,
      "validation": {
        "required": true,
        "minLength": 10,
        "errorMessage": "Phone number must be at least 10 digits"
      },
      "placeholder": "e.g., 0501234567"
    },
    "receiverCountry": {
      "type": "select",
      "label": "Country",
      "required": true,
      "validation": {
        "required": true,
        "errorMessage": "Please select a country"
      },
      "placeholder": "Select country"
    },
    "receiverCity": {
      "type": "text",
      "label": "City",
      "required": true,
      "validation": {
        "required": true,
        "minLength": 2,
        "errorMessage": "City is required"
      },
      "placeholder": "Enter city"
    },
    "receiverStreet": {
      "type": "text",
      "label": "Street Address",
      "required": false,
      "validation": {
        "required": false,
        "minLength": 5,
        "errorMessage": "Street address is required"
      },
      "placeholder": "Enter street address"
    },
    "receiverPostalCode": {
      "type": "text",
      "label": "Postal Code",
      "required": true,
      "validation": {
        "required": true,
        "minLength": 3,
        "maxLength": 10,
        "errorMessage": "Postal code must be between 3-10 characters"
      },
      "placeholder": "Enter postal code"
    }
  }
}
